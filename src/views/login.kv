<Login>:
    name: "login"
    username_input: username_input
    password_input: password_input

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        center_y: root.height
        padding: 20
        spacing: 10

        TitleLabel:
            text: "Login Form"

        Label:
            text: "Username"
        TextInput:
            id: username_input

        Label:
            text: "Password"
        TextInput:
            id: password_input
            password: True

        Button:
            text: "Login"
            on_press: root.login(app)

        Button:
            text: "Home"
            on_release:
                app.root.to("home")
                root.slide_to("right")